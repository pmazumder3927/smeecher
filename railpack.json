{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "python": "3.13",
    "uv": "*",
    "node": "*"
  },
  "caches": {
    "uv-cache": {
      "directory": "/root/.cache/uv",
      "type": "shared"
    },
    "npm-cache": {
      "directory": "/root/.npm",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "cd server && uv sync --frozen",
        "cd web && npm ci && npm run build"
      ],
      "caches": ["uv-cache", "npm-cache"]
    }
  },
  "deploy": {
    "startCommand": "cd server && uv run smeecher-graph",
    "inputs": [
      { "step": "install", "include": ["."] }
    ]
  }
}
